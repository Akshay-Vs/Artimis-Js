{
  "extends": "@artimisjs/typescript-config/vite-library.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hooks": ["@/src/hooks/*"],
      "@contexts": ["@/src/contexts/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
