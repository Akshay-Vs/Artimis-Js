{
	"name": "@artimisjs/ui",
	"private": false,
	"version": "0.0.1",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/artimisjs.umd.cjs",
	"module": "./dist/artimisjs.js",
	"exports": {
		".": {
			"import": "./dist/artimisjs.js",
			"require": "./dist/artimisjs.umd.js"
		},
		"./dist/style.css": "./dist/style.css"
	},
	"sideEffects": false,
	"scripts": {
		"dev": "vite",
		"prebuild": "rm -rf dist",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"prepublish": "npm run build"
	},
	"dependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@artimisjs/typescript-config": "workspace:*",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.13.1",
		"@typescript-eslint/parser": "^7.13.1",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"eslint": "^8.57.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.7",
		"typescript": "^5.2.2",
		"vite": "^5.3.1"
	}
}
